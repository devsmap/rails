<div class="d-flex col-lg-4 align-items-center auth-bg px-2 p-lg-5">
  <div class="col-12 col-sm-8 col-md-6 col-lg-12 px-xl-2 mx-auto">
    
    <h2 class="card-title fw-bold mb-1">Hey Dude! ğŸ‘‹</h2>
    <p class="card-text mb-2">FaÃ§a o login em sua conta</p>
    
    <%= render 'layouts/shared/flash_message' %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => 'auth-login-form mt-2'}) do |f| %>
      <div class="mb-1">
        <%= f.input :email,
                  as: :email,
                  label: "Email",
                  required: true,
                  autofocus: true,
                  tabindex: 1,
                  input_html: { class: "form-control", aria: { describedby: 'login-email' } } %>
      </div>
      
      <div class="mb-1">
        <%= f.input :password,
                  label: "Senha",
                  required: true,
                  tabindex: 2,
                  input_html: { class: "form-control", aria: { describedby: 'login-password' } } %>
      </div>

      <button class="btn btn-primary w-100" tabindex="4">Entrar</button>
    <% end %>

  </div>
</div>
